<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniPos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiniPos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customers.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/img/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    &nbsp;&nbsp; Sales Force Automation - Evision microsystems (Pvt) Ltd
                </a>
            </div>
        </nav>
    </header>
    <div class="row align-items-start">
        <div class="col-2">
            <nav class="nav flex-column" id="accordion">
                <div class="card" style="background-color: #244862; border: none; color: white;">
                    <a class="nav-link active" aria-current="page" style="font-size: 18px; color: white;" asp-controller="Home" asp-action="Index">Dashboard</a>
                </div>
                <div class="card" style="background-color: #244862; border: none; color: white;">
                    <a class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" style="font-size: 18px;" aria-controls="collapseOne">Master Data</a>
                    @*<a class="nav-link" asp-controller="Home" asp-action="Privacy">Master Data</a>*@

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion" style="font-size: 18px;">
                        <div class="card-body">
                            <a class="nav-link active" aria-current="page" style="font-size: 20px; color: white;" asp-controller="Customers" asp-action="Customers">Customers</a>
                        </div>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion" style="font-size: 18px;">
                        <div class="card-body" style="color: white;">
                            <a class="nav-link active" aria-current="page" style="font-size: 20px; color: white;" asp-controller="Product" asp-action="Products">Products</a>
                        </div>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion" style="font-size: 18px;">
                        <div class="card-body" style="color: white;">
                            <a class="nav-link active" aria-current="page" style="font-size: 20px; color: white;" asp-controller="Town" asp-action="Town">Towns</a>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #244862; border: none; color: white;">
                    <a class="btn btn-link" data-toggle="collapse" data-target="#collapseTwo" style="font-size: 18px;" aria-expanded="true" aria-controls="collapseTwo">Transactions</a>
                    @*<a class="nav-link" asp-controller="Home" asp-action="Privacy">Master Data</a>*@

                    <div id="collapseTwo" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion" style="font-size: 18px;">
                        <div class="card-body" style="color: white;">
                            <a class="nav-link active" aria-current="page" style="font-size: 20px; color: white;" asp-controller="Invoices" asp-action="Invoices">Invoices</a>
                        </div>
                    </div>
                </div>
                <div class="card" style="background-color: #244862; border: none;">
                    <a class="nav-link" style="font-size: 18px; color: white;" href="#">Administration</a>
                </div>
                <div class="card" style="background-color: #244862; border: none;">
                    <a class="nav-link" style="font-size: 18px; color: white;" href="#">Users</a>
                </div>
            </nav>
        </div>
        <div class="col-10" style="height: 92vh;">
            <div class="row">
                <main role="main">
                    @RenderBody()
                </main>
                <div class="border-top footer text-muted">
                    <div class="container" style="font-size: 18px; text-align: center;">
                        2023 All Rights Reserved. Developed by Evision microsystems (PVT) LTD
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
</body>
</html>
